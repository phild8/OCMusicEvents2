<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.orangecoastcollege.cs273.ocmusicevents2.EventDetailsActivity"
    android:orientation="vertical"
    android:weightSum="1">


    <ImageView
        android:id="@+id/eventImageView"
        android:layout_width="@dimen/detail_image_width"
        android:layout_height="@dimen/detail_image_height"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/detail_image_bottom_padding"
        android:paddingTop="@dimen/detail_image_top_padding"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_weight="0.62" />

    <TextView
        android:id="@+id/eventTitleTextView"
        android:layout_width="@dimen/details_text_view_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/title_margin_bottom"
        android:textSize="@dimen/event_title_text_size" />

    <TextView
        android:id="@+id/eventDateDayTextView"
        android:layout_width="@dimen/details_text_view_width"
        android:layout_height="wrap_content"
        android:textSize="@dimen/event_details_text_size"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/eventTimeTextView"
        android:layout_width="@dimen/details_text_view_width"
        android:layout_height="wrap_content"
        android:textSize="@dimen/event_details_text_size"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/eventLocationTextView"
        android:layout_width="@dimen/details_text_view_width"
        android:layout_height="wrap_content"
        android:textSize="@dimen/event_details_text_size"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/eventAddress1TextView"
        android:layout_width="@dimen/details_text_view_width"
        android:layout_height="wrap_content"
        android:textSize="@dimen/event_details_text_size"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/eventAddress2TextView"
        android:layout_width="@dimen/details_text_view_width"
        android:layout_height="wrap_content"
        android:textSize="@dimen/event_details_text_size"
        android:layout_gravity="center" />

</LinearLayout>
