<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/listItemImageView"
        android:layout_width="@dimen/events_linear_layout_size"
        android:layout_height="@dimen/events_linear_layout_size"
        android:layout_marginRight="@dimen/image_margin"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/events_linear_layout_size"
        android:orientation="vertical">

        <TextView
            android:id="@+id/listItemDateTextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_item_height"
            android:textSize="@dimen/title_item_text_size" />

        <TextView
            android:id="@+id/listItemTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/date_item_height"
            android:textSize="@dimen/date_item_text_size" />
    </LinearLayout>

</LinearLayout>